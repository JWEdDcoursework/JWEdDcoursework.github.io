    <script>
        function toggleSubItems(id) {
            // Hide all other sub-items
            const allSubItems = document.querySelectorAll('.sub-items');
            allSubItems.forEach(item => {
                if (item.id !== id) {
                    item.classList.remove('show');
                }
            });
            
            // Toggle the clicked sub-item
            const subItems = document.getElementById(id);
            subItems.classList.toggle('show');
        }
        
        // Close sub-items when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.branch-node')) {
                const allSubItems = document.querySelectorAll('.sub-items');
                allSubItems.forEach(item => {
                    item.classList.remove('show');
                });
            }
        });
    </script>
